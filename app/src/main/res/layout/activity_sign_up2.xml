<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.example.prajwalkulkarni.hostelapplication.MainActivity">


    <ImageView
        android:id="@+id/formLogo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/todo"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/sign_up"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="5sp"
            android:id="@+id/stepperbody"
            android:baselineAligned="false"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/formLogo"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="12sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="12sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="28dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="85dp"
                    android:layout_height="3sp"
                    android:layout_gravity="center"
                    android:background="#c55a83"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="5"/>
                <TextView
                    android:layout_width="24sp"
                    android:layout_height="28sp"
                    android:background="@drawable/circle"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="85dp"
                    android:layout_height="3sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#c55a83"
                    android:layout_weight="5"/>
                <TextView
                    android:layout_width="24sp"
                    android:layout_height="28sp"
                    android:background="@drawable/greyish"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="#2c5098"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_below="@id/stepperbody"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="College"
            android:background="@drawable/header"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/t1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_white"
                android:text="USN"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/usn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="3"
                android:background="@drawable/bg_white2"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textColor="#181818"
                android:textColorHint="#101010"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_white"
                android:text="Branch"
                android:id="@+id/t2"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/branch"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:background="@drawable/bg_white2"
                android:gravity="right"
                android:textColor="#000"
                android:textSize="22sp"
                android:layout_weight="3"
                android:prompt="@string/spinner_title"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_white"
                android:text="Year"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:id="@+id/t3"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_white2"
                android:textColor="#181818"
                android:textColorHint="#101010"
                android:textSize="22sp"
                android:layout_weight="3"
                android:prompt="@string/spinner_title"/>
        </LinearLayout>

        <View
            android:background="#383838"
            android:layout_width = "fill_parent"
            android:layout_height="2sp"
            android:layout_gravity="center"
            android:layout_marginLeft="4sp"
            android:backgroundTint="#fff"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Hostel"
            android:layout_marginBottom="10dp"
            android:background="@drawable/header"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_white"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Block"
                android:gravity="center"
                android:id="@+id/t4"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/block"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:textColor="#181818"
                android:textSize="20sp"
                android:layout_weight="3"
                android:background="@drawable/bg_white2"
                android:prompt="@string/spinner_title"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_white"
                android:text="Room"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:gravity="center"
                android:id="@+id/t5"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/roomNo"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="3"
                android:background="@drawable/bg_white2"
                android:inputType="number"
                android:paddingStart="15dp"
                android:textColor="#181818"
                android:textColorHint="#101010"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textSize="22sp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="Back"
            android:id="@+id/back"
            android:background="@drawable/button_bg_rounded_corners" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:text="Next"
                android:textSize="22sp"
                android:textColor="#fff"
                android:padding="1dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:background="@drawable/button"
                android:id="@+id/next2"
                />
        </LinearLayout>


    </LinearLayout>








</RelativeLayout>